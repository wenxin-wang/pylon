pkgname=envoyproxy-arm64-bin
provides=(envoyproxy)
conflicts=(envoyproxy)
pkgver=1.35.0
pkgrel=1
pkgdesc="An open source edge and service proxy, designed for cloud-native applications"
arch=('arm64')
url="https://envoyproxy.io"
license=('Apache2')
source=(
    "https://archive.tetratelabs.io/envoy/download/v$pkgver/envoy-v$pkgver-linux-arm64.tar.xz"
)
sha512sums=('7d7606ba7948e04842a54a12b7fcf2daa6925e9d8e7068f3d9dd4e41954194fee11263ad71dbd4f81202c2c9a6ad1b547aa25e31f18b78f7ca7f7f66233a2322')


check() {
    "$srcdir/envoy-v$pkgver-linux-arm64/bin/envoy" --version > /dev/null
}

package() {
    install -Dm755 "$srcdir/envoy-v$pkgver-linux-arm64/bin/envoy" "$pkgdir/usr/bin/envoy"
}
